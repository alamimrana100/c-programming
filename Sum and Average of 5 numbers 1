include <stdio.h>

int main() {

    int n = 5;

    int sum = 0;

    int num;

    for (int i = 0; i < n; i++) {

        scanf("%d", &num);

        sum += num;

    }

    double average = (double)sum / n;

    printf("Sum of the %d number is : %d\n", n, sum);

    printf("Average of the %d number is : %.1lf\n", n, average);

    return 0;

}
